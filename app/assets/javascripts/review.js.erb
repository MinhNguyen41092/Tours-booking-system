$(document).on('turbolinks:load', function() {
  $('#review-link').click(function(event) {
    event.preventDefault();
    $('#review-form').fadeToggle();
  });

  $('.my-reviews').click(function(event) {
    event.preventDefault();
    $('#user-reviews').fadeToggle();
  });

  $('.my-orders').click(function(event) {
    event.preventDefault();
    $('#user-orders').fadeToggle();
  });

  '<% Comment.all.each do |comment| %>'
    $('#comment-<%= comment.id %>').click(function(event) {
      event.preventDefault();
      $('#comment-form-<%= comment.id %>').fadeToggle();
    });
  '<% end %>'
});
