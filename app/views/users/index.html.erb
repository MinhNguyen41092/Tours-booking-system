<h1 class="text-center"><%= t "users.all" %></h1>

<div class="container">
  <div class="pag"><%= paginate @users %></div>
  <% @users.each do |user| %>
    <div class="profile">
      <%= link_to admin_destroy_user_path(user), method: :delete,
        data: {confirm: t("confirm.sure")} do %>
        <span class="glyphicon glyphicon-trash icon-trash" aria-hidden="true"></span>
      <% end %>
      <div class="avatar"><%= link_to image_tag(user.avatar.avatar), user_path(user) %></div><br/>
      <%= link_to user.email, user_path(user) %><br/>
      <div class="text-center"><%= link_to user.username, user_path(user) %></div>
    </div>
  <% end %>
</div>
