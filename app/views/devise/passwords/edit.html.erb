<div class="container">
  <div class="panel panel-info pass-reset">
    <div class="panel-heading"><h3>Change your password</h3></div>
    <div class="panel-body ">
      <%= simple_form_for resource, as: resource_name,
        url: password_path(resource_name), html: { method: :put } do |f| %>
        <%= f.error_notification %>

        <%= f.input :reset_password_token, as: :hidden %>
        <%= f.full_error :reset_password_token %>

        <%= f.input :password, label: "New password", required: true, autofocus: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
        <%= f.input :password_confirmation, label: "Confirm your new password", required: true %>

        <%= f.button :submit, "Change my password", class: "btn btn-info btn-block" %>
      <% end %>
    </div>
  </div>

  <%= render "devise/shared/links" %>
</div>
</div>
