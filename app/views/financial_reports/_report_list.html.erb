<table class="table table-hover table-bordered">
  <thead>
    <tr>
      <th><%= t "reports.admin" %></th>
      <th><%= t "reports.date" %></th>
      <th><%= t "reports.cost" %></th>
      <th><%= t "reports.revenue" %></th>
      <th><%= t "reports.net_income" %></th>
      <th><%= t "reports.actions" %></th>
    </tr>
  </thead>
  <tbody>
    <% reports.each do |report| %>
      <tr>
        <td><%= report.user.full_name %></td>
        <td><%= report.date.strftime("%m/%d/%Y") %></td>
        <td><%= report.cost %></td>
        <td><%= report.revenue %></td>
        <td><%= report.net_income %></td>
        <td class="del-report">
          <%= link_to t("reports.delete"), report, remote: true, method: :delete,
            data: {confirm: t("confirm.sure")}, class: "btn btn-sm btn-danger" %>
          <%= link_to t("reports.edit"), edit_financial_report_path(report),
            class: "btn btn-sm btn-info" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
