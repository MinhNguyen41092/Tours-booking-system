<div class="banner">
  <div class="signup">
    <div class="container">
      <div class="row">
        <div class="col-md-6">

          <div class="panel panel-info">
            <div class="panel-heading"><h3><%= t "user_form.wb" %></h3></div>
            <div class="panel-body ">
              <div id="login-errors"></div>
              <%= simple_form_for resource, as: resource_name,
                url: session_path(resource_name), remote: true do |f| %>

                <%= f.input :login, label: false, placeholder: t("user_form.email"),
                  autofocus: true %>

                <%= f.input :password, label: false, placeholder: t("user_form.password"),
                  autocomplete: "off" %>

                <%= button_tag type: 'submit', class: "btn btn-info btn-block" do %>
                  <%= t "user_form.login" %>
                <% end %>
              <% end %>
              <hr>
              <div class="social-login">
                <%= link_to omniauth_authorize_path(resource_name, :facebook),
                  class: "btn btn-block btn-social btn-facebook" do %>
                  <span class="fa fa-facebook"></span><%= t "users.login_fb" %>
                <% end %>
                <%= link_to omniauth_authorize_path(resource_name, :twitter),
                  class: "btn btn-block btn-social btn-twitter" do %>
                  <span class="fa fa-twitter"></span><%= t "users.login_twt" %>
                <% end %>
                <%= link_to omniauth_authorize_path(resource_name, :google_oauth2),
                  class: "btn btn-block btn-social btn-google" do %>
                  <span class="fa fa-google"></span><%= t "users.login_google" %>
                <% end %>
                <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                  <%= link_to t("users.forgot_pass"), new_password_path(resource_name) %><br />
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

  </div>
  <img class="banner-image"
    src="http://res.cloudinary.com/hkfduthj9/image/upload/v1497752750/4_xzij6w.jpg">
</div>
