<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <%= simple_form_for @category do |f| %>
        <%= f.input :name %>

        <%= f.input :parent_id, label: t("categories.parent"),
          collection: Category.all, value_method: :id, label_method: :name,
          include_blank: t("categories.choose") %>

        <%= f.submit @category.new_record? ? t("categories.new") : t("categories.update"),
          class: "btn btn-primary btn-block cat-submit"%>
      <% end %>
    </div>
  </div>
</div>
