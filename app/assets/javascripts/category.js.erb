$(document).on('turbolinks:load', function() {
  $('#button-collapse').on('click', function(event){
    $('#sidebar').toggleClass('active');
  });

  $('#adminList').on('click', function(event){
    $('.collapse').toggleClass('in');
  });

  $('#category-collapse').on('click', function(event){
    event.preventDefault();
    $('.cat-collapse').toggleClass('in');
  });

  '<% Category.main_categories.each do |cat| %>'
    $('#subcategory-collapse-<%= cat.id %>').on('click', function(event){
      event.preventDefault();
      $('#subcategory-list-<%= cat.id %>.sub-collapse').toggleClass('in');
    });
  '<% end %>'
});
